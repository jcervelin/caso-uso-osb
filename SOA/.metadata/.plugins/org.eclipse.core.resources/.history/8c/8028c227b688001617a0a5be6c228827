		   p.setBilhetePortabilidade(UUID.randomUUID().toString());
		   
		   Calendar c = Calendar.getInstance(); 
		   c.add(Calendar.DATE, 1);
		   Date dt = c.getTime();
		   p.setDataHoraJanela(new Date());
		    return custArray;
		  }
	
}